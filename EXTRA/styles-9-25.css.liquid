/* Footer newletter email boxes styling */
@media only screen and (min-width: 750px) {
  .footer .newsletter form {
    display: block;
  }
  .footer .contact_email {
    margin-bottom: 15px;
  }
  .footer #contact_form input.newsletter-form__sign-up[type=submit] {
    width: 100%;
  }
}

/* hide the close icon for top announcement bar */
.promo-banner__close:before {
  color: transparent !important;
}

/* Testimonial styling */
.homepage-slideshow, 
.shopify-section--testimonials {
  width: 100% !important;
  max-width: none !important;
}

.shopify-section--testimonials,
.testimonial-block .gallery-cell, 
.testimonial-slideshow,
.shopify-section--testimonials .gallery-cell,
.testimonial-block.gallery-cell.testimonial-block--no-image {
 background-color: #f3f0ec !important;    
}

@media (min-width: 750px) {
 .shopify-section--testimonials {
   padding-top: 40px;
   padding-bottom: 40px;
 }
}

.caption-content.testimonial-text .headline, .caption-content.testimonial-text h2,
.caption-content.testimonial-text .subtitle  {
 color: #333;
}

.testimonial-block .headline {
 font-family: {{ settings.headline__font.family }}, {{ settings.headline__font.fallback_families }};
 font-weight: {{ settings.headline__font.weight }};
 font-style: {{ settings.headline__font.style }};
 text-transform: {{ settings.headline_font_style }};
 line-height: 1.5;
 color: {{ settings.headline_color }};
 display: block;
 letter-spacing: {{ settings.headline_letter_spacing | append: 'px' }};
 text-rendering: optimizeLegibility;
 font-size: {{ font_size_header | times: 0.9 | floor | append: 'px' }};
 margin-bottom: 0.75em;
}

@media screen and (max-width: 780px) {
  .shopify-section--testimonials .set-static .caption {
    padding-left: 0;
    padding-right: 0;
  }
}

/* back In Stock Date styling */
.back-in-stock {
  display: block;
  font-weight: bold;
  font-size: 13px;
  text-align: left;
  margin-bottom: 5px;
  text-transform: {{ settings.regular_font_style }};
}


