  margin-bottom: 0; 
}

/* Collection List title box styling */
.product-wrap:hover .collection-details { 
   border-color: var(--button-color-border,#3c3c3c); 
   background: var(--button-color-background,#3c3c3c);
}

.thumbnail-overlay .title {
  padding: 0 1.3em;
}

.collection-details h3{ 
  margin: 0 !important;
}

