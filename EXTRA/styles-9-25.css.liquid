/*  padding for main linklists  */
.menu-padding-all { 
	margin-left: 5px;
  margin-right: 5px;
}
.menu-padding-social {
  margin-left: 75px;
}

/* text color for Social linklist */
.link-color {
  color: #BBA344  !important; /*rgb(67, 168, 0)*/
}

/* padding under logo */
.logo-alignment--center .header__logo {
  padding-bottom: 20px;
}

/* Inspiration sublinks */
.vertical-menu_submenu.vertical-menu--align-right-inspiration {
  left: none !important;
}

/* shift main menu dropdown sublinks so they align with main link */
